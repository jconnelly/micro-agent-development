# Micro-Agent Development Platform - Environment Configuration
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=production
FLASK_DEBUG=0
API_PORT=8000
DEV_API_PORT=5000

# API Security
API_KEY=your-secure-api-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-2.0-flash

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4o
OPENAI_ORG_ID=your-openai-org-id-here

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20241022

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-deployment

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
AUDIT_LOG_LEVEL=2
LOG_FILE_PATH=/app/logs/app.log
AUDIT_LOG_FILE_PATH=/app/logs/audit.jsonl

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=4
WORKER_TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# CACHE CONFIGURATION (OPTIONAL)
# =============================================================================
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
CACHE_TTL=3600

# =============================================================================
# DATABASE CONFIGURATION (FUTURE)
# =============================================================================
DATABASE_URL=sqlite:///micro_agents.db
# DATABASE_URL=postgresql://user:password@localhost:5432/micro_agents
# DATABASE_URL=mysql://user:password@localhost:3306/micro_agents

# =============================================================================
# MONITORING CONFIGURATION (OPTIONAL)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure-grafana-password-here

DOCS_PORT=8001
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-flask-key-here-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-for-authentication
SESSION_TIMEOUT=3600

# File Upload Security
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_FILE_EXTENSIONS=txt,md,json,yaml,yml,py,js,java,cpp,c,rb,go,php

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEVELOPMENT_MODE=false
ENABLE_CORS_ALL_ORIGINS=false
SWAGGER_UI_ENABLED=true
DEBUG_TOOLBAR_ENABLED=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# SSL/TLS Configuration
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
SSL_ENABLED=false

# Load Balancer Configuration
BEHIND_PROXY=false
PROXY_COUNT=1

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
DEFAULT_PII_CONTEXT=general
DEFAULT_MASKING_STRATEGY=partial_mask
DEFAULT_AUDIT_LEVEL=2
DEFAULT_LLM_PROVIDER=gemini

# Processing Limits
MAX_FILE_SIZE_MB=50
MAX_CHUNK_SIZE=175
PROCESSING_TIMEOUT_SECONDS=300
RATE_LIMIT_REQUESTS_PER_MINUTE=100